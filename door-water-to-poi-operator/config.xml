<?xml version='1.0' encoding='UTF-8'?>
<operator xmlns="http://wirecloud.conwet.fi.upm.es/ns/macdescription/1" vendor="SCiLabs" name="door-water-to-poi" version="1.0.0">
  <details>
    <title>Door and Water to POI</title>
    <homepage>https://github.com/smart-city-lab-2050/Wirecloud-Components</homepage>
    <authors>Fabian Baeumer</authors>
    <email>fabian.baeumer@scilabs.de</email>
    <description>Transforms the readings from door and water sensors into POIs</description>
    <license>MIT</license>
    <licenseurl>https://opensource.org/licenses/MIT</licenseurl>
    <doc>doc/userguide.md</doc>
    <changelog>doc/changelog.md</changelog>
    <issuetracker>https://github.com/smart-city-lab-2050/Wirecloud-Components/issues</issuetracker>
  </details>
  <wiring>
    <inputendpoint name="waterInput" type="text" label="Water sensors" description="Readings from water sensors" friendcode="entity-list"/>
    <inputendpoint name="doorInput" type="text" label="Door sensors" description="Readings from door sensors" friendcode="entity-list"/>
    <outputendpoint name="poiOutput" type="text" label="PoI" description="Transformed PoI" friendcode="poi-list"/>
  </wiring>
  <scripts>
    <script src="js/main.js"/>
  </scripts>
</operator>